<div>
    <a href="<%= link %>new" class="btn btn-success">New</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <% fields.forEach( field => { %>
                <th scope="col">
                    <%= field.toUpperCase() %>
                </th>
                <% }) %>
            </tr>
        </thead>
        <tbody>
            <% items.forEach( item => { %>
            <tr>
                <% fields.forEach( field => { %>
                <td>
                    <%= item[field] %>
                </td>
                <% }) %>
                <td><a class="btn btn-info" href="<%= link %><%= item[id] %>">View</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>